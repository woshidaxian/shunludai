/* pages/comment/comment.wxss */
.bgbox{
  width: 750rpx;
  height: 310rpx;
  background: #98c4f8;
}
.bgbox-w{
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 35rpx;
}
.bgbox-name{
  text-align: center;
  font-size: 32rpx;
  margin-top: 10rpx;
}
.bgbox-n{
  width: 135rpx;
  height: 135rpx;
  background: rgba(245, 245, 245, 0.8);
  border-radius: 50%;
  margin: 0 auto;
  position: relative;
  top: 8rpx;
}
.bgbox-nn{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  margin: 0 auto;
  position: relative;
  top: 8rpx;
}
.img1{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.btnbox{
  width: 688rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #f8f8f8;
  display: flex;
  flex-direction: row;
}
.btnbox view{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
}
.btnbox-get:after{
  content: "";
  width: 0px;
  height: 80rpx;
  border: 1px solid #e6e6e6;
  position: relative;
  right: -100rpx;
}
.lastbox{
  width: 620rpx;
  height: 500rpx;
  border-radius: 20rpx;
  margin-top: 50rpx;
  box-shadow: 0px 6px 10px 5px #e6e6e6;
  line-height: 500rpx;
  text-align: center;
  font-size:34rpx;
}